@page "/benefit-types/{Id}"
@inject IHRDepartmentApiWrapper HRDepartmentApi
@inject IJSRuntime JsRuntime

<Card>
    <CardHeader>
        <Row Class="justify-content-between">
            <Column ColumnSize="ColumnSize.IsAuto">
                <h4>Редактировать</h4>
            </Column>
            <Column ColumnSize="ColumnSize.IsAuto">
                <Button Color="Blazorise.Color.Primary" Clicked="UpdateBenefitTypeAsync">
                    Сохранить
                </Button>
                <Button Color="Blazorise.Color.Danger" Clicked="DeleteBenefitTypeAsync">
                    Удалить
                </Button>
                <Button Color="Blazorise.Color.Secondary" onclick="history.back();">
                    Закрыть
                </Button>
            </Column>
        </Row>
    </CardHeader>

    <CardBody>
        <Field>
            <FieldLabel>Название типа льготы</FieldLabel>
            <TextEdit @bind-Text="BenefitType.Name" />
        </Field>
    </CardBody>
</Card>

@code {
    [Parameter]
    public string Id { get; set; } = "";

    private int BenefitTypeId { get; set; }

    private BenefitTypePostDto BenefitType { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (!int.TryParse(Id, out var id))
            throw new Exception("Некорректный идентификатор");
        BenefitTypeId = id;
        await HRDepartmentApi.GetBenefitTypeById(BenefitTypeId);
        await base.OnInitializedAsync();
    }

    private async Task DeleteBenefitTypeAsync()
    {
        await HRDepartmentApi.DeleteBenefitType(BenefitTypeId);
        await JsRuntime.InvokeVoidAsync("history.back");
    }

    private async Task UpdateBenefitTypeAsync()
    {
        await HRDepartmentApi.UpdateBenefitType(BenefitTypeId, BenefitType);
        await JsRuntime.InvokeVoidAsync("history.back");
    }
}